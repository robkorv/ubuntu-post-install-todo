#!/bin/sh

# script/test: Run test suite for application. Optionally pass in a path to an
#              individual test file to run a single test.


set -e

cd "$(dirname "$0")/.."

[ -z "$DEBUG" ] || set -x

script/update

echo "===> Running rubocop..."
rubocop Vagrantfile
echo "===> Running shellcheck..."
shellcheck script/*
